<!doctype html>
<html lang="en-US">
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html">
    <title>User Profile with Content Tabs - Design Shack Demo</title>
    <meta name="author" content="Jake Rocheleau">
    <link rel="shortcut icon" href="http://designshack.net/favicon.ico">
    <link rel="icon" href="http://designshack.net/favicon.ico">
    <link rel="stylesheet" type="text/css" media="all" href="css/styles.css">
    <script type="text/javascript" src="js/jquery-1.10.2.min.js"></script>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        th, td {
            padding: 5px;
        }
    </style>
</head>

<body>
<div id="topbar">
    <a>Welcome to your own personal movie database!</a>
</div>

<div id="w">
    <div id="content" class="clearfix">
        <h1><%= user.fb.displayName %></h1>

        <nav id="profiletabs">
            <ul class="clearfix">
                <li><a href="/home">Profile</a></li>
                <li><a href="/movies">Watched Movies</a></li>
                <li><a href="/tvshows" class="sel">Watched Tele-Shows</a></li>
                <li><a href="/wishlist">Wishlist</a></li>
            </ul>
        </nav>

        <section id="movie">
            <% var jsondata = JSON.parse(tvShowsJSON)%>
            <% if (jsondata) { %>
            <table style="width:100%">
                <tr>
                    <th>Tv-Show Title</th>
                </tr>
                <% for(var i=0; i < jsondata.data.length; i++) { %>
                <% if (jsondata.data[i].data.tv_show) { %>
                <tr>
                    <td>
                        <%= jsondata.data[i].data.tv_show.title %>
                    </td>
                </tr>
                <% } %>
                <% } %>
            </table>
            <% } %>
        </section>

    </div><!-- @end #content -->
</div><!-- @end #w --></body>
</html>
